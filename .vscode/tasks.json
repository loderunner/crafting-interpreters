{
  "tasks": [
    {
      "type": "shell",
      "label": "Make clox",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": true
      },
      "command": "/usr/bin/make",
      "options": {
        "cwd": "${workspaceFolder}/clox",
        "env": {
          "CFLAGS": "-fcolor-diagnostics -fansi-escape-codes -g"
        }
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": ["relative", "${workspaceFolder}/clox"]
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Make check",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "command": "/usr/bin/make",
      "args": ["tests/check"],
      "options": {
        "cwd": "${workspaceFolder}/clox",
        "env": {
          "CFLAGS": "-fcolor-diagnostics -fansi-escape-codes -g"
        }
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": ["relative", "${workspaceFolder}/clox"]
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    }
  ],
  "version": "2.0.0"
}
