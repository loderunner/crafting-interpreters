  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug JSLox",
      "request": "launch",
      "runtimeArgs": ["start"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "runtimeVersion": "20.11.1",
      "type": "node",
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    },
    {
      "name": "Generate AST",
      "request": "launch",
      "runtimeArgs": ["run", "generate-ast", "--", "src"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "runtimeVersion": "20.11.1",
      "type": "node",
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    }
  ]
}
